[

     {
      "key": "em2",
      "type": "rr-html",
      "templateOptions": {
        "htmlTemplate" :"<h3>Per ogni minore </h3>",
        "label": "html template label"
      }
     
    },

    {
      "key": "rr-sport",
      "type": "rr-select",
      "templateOptions": {
        "label": "rr - Grado scuola",
        "description" : "rr - description",
        "options": [
          { "name": "1", "value": "Primaria (elementari)" },
          { "name": "2", "value": "Secondaria I째 grado (medie)" },
          { "name": "3", "value": "Secondaria II째 grado (superiori)" }
        ]
      }
    },

    {
      "key": "sport",
      "type": "select",
      "templateOptions": {
        "label": "Grado scuola",
        "description" : "description",
        "options": [
          { "id": "1", "name": "Primaria (elementari)" },
          { "id": "2", "name": "Secondaria I째 grado (medie)" },
          { "id": "3", "name": "Secondaria II째 grado (superiori)" }
        ],
        "valueProp": "id",
        "labelProp": "name"
      }
    },
    {
      "key": "team",
      "type": "select",
      "templateOptions": {
        "label": "Team",
        "options": [],
        "valueProp": "id",
        "labelProp": "name"
      },
      "expressionProperties": {
        "templateOptions.options": "formState.selectOptionsData.teams.filter(team => team.sportId === model.sport)",
        "model.team": "field.templateOptions.options.find(o => o.id === model.team) ? model.team:null"
      }
    },
    {
      "key": "player",
      "type": "select",
      "templateOptions": {
        "label": "Player",
        "options": [],
        "valueProp": "id",
        "labelProp": "name"
      },
      "expressionProperties": {
        "templateOptions.options": "formState.selectOptionsData.players.filter(player => player.teamId === model.team)",
        "model.player": "field.templateOptions.options.find(o => o.id === model.player) ? model.player:null"
      }
    }
  ]